<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="@drawable/bbg"
    tools:context=".MainActivity">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authentication"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/googleBtn"
        android:layout_width="212dp"
        android:layout_height="59dp"
        android:layout_centerInParent="true"
        android:background="@drawable/download" />


    <Button
        android:id="@+id/facebookBtn"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:layout_below="@+id/googleBtn"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/face" />




    <Button
        android:id="@+id/phoneBtn"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebookBtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/btnSignIn"
        android:textColor="@android:color/white"
        android:text="Phone Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_rider_app"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="12sp"
        android:textColor="#ffff"
        android:textAlignment="center"
        android:gravity="center_horizontal"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txt_rider_app"
        android:layout_margin="16dp">

        <Button
            android:layout_width="1dp"
            android:background="@drawable/btn_sign_in_background"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="SIGN IN"
            android:id="@+id/btnSignIn"
            android:layout_weight="1"
            android:textColor="#ffffff">

        </Button>

        <Button
            android:layout_width="0dp"
            android:background="@drawable/btn_register_background"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="REGISTER"
            android:id="@+id/btnRegister"
            android:layout_weight="1"
            android:textColor="#000000">

        </Button>
    </LinearLayout>

</RelativeLayout>